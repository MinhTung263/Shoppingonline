<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KhachHangActivity">
    <android.support.v7.widget.Toolbar
        android:theme="@style/ToolbarKhachHang"
        app:titleTextColor="@color/colorApp"
        android:background="@color/colorApp"
        android:id="@+id/toolbarKhachHang"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
      <LinearLayout
          android:layout_below="@+id/toolbarKhachHang"
          android:id="@+id/lnKhachHang"
          android:layout_height="126dp"
          android:background="@color/colorApp"
          android:gravity="bottom"
          android:orientation="vertical"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingTop="@dimen/activity_vertical_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          android:paddingBottom="@dimen/activity_vertical_margin"
          android:layout_width="match_parent">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_centerVertical="true"
                  android:backgroundTint="@color/colorWhite"
                  android:scaleType="fitXY"
                  android:id="@+id/imageView"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:paddingTop="@dimen/nav_header_vertical_spacing"
                  app:srcCompat="@drawable/icon_avtkhachhang" />
              <RelativeLayout
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/imageView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:textStyle="bold"
                      android:textSize="27sp"
                      android:textColor="@color/colorWhite"
                      android:id="@+id/tvTenKhachHang"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="@dimen/nav_header_vertical_spacing"
                      android:text="Guest"
                      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                  <TextView
                      android:textSize="20sp"
                      android:layout_below="@+id/tvTenKhachHang"
                      android:textColor="@color/colorWhite"
                      android:id="@+id/tvEmail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Guest@gmail.com" />
              </RelativeLayout>
          </RelativeLayout>
      </LinearLayout>
    <ListView
        android:layout_below="@id/lnKhachHang"
        android:background="@color/colorWhite"
        android:id="@+id/lvKhachHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</RelativeLayout>