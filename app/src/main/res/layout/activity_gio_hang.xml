<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".Activity.GioHangActivity">
    <android.support.v7.widget.Toolbar
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:theme="@style/ToolbarColoredBackArrow"
        android:id="@+id/toolbarGioHang"
        android:background="@color/colorWhite"
        app:title="Giỏ hàng"
        app:titleTextColor="@color/colorApp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/linearlayoutKhongCoSanPham"
        android:layout_below="@id/toolbarGioHang"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="30dp"
                    android:id="@+id/imgThongBao"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:src="@drawable/icon_khongcosanpham"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imgThongBao"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:id="@+id/tvThongBao"
                    android:text="Không có sản phẩm nào trong giỏ hàng!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="100dp"
                    android:id="@+id/btnMuaSamNgay"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvThongBao"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:background="@color/colorOrange"
                    android:text="Mua sắm ngay!"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/quantam"
                    android:layout_marginTop="100dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/btnMuaSamNgay"
                    android:text="Có thể bạn quan tâm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/quantam"
                    android:id="@+id/recyclerviewSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayoutCoSanPham"
        android:layout_below="@+id/toolbarGioHang"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/lvGioHang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Tổng tiền:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorApp"
                        android:id="@+id/tvTongTien"
                        android:layout_alignParentRight="true"
                        android:textSize="18sp"
                        android:text="20.990.000đ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <Button
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@color/colorOrange"
                    android:textColor="#fff"
                    android:text="Mua ngay"
                    android:id="@+id/btnMuaNgay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <Button
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@color/colorOrange"
                    android:textColor="#fff"
                    android:text="Tiếp tục mua hàng"
                    android:id="@+id/btnTiepTucMuaHang"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>