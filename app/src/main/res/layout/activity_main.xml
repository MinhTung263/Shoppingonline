<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:layout_height="fill_parent"
    tools:context=".Activity.MainActivity">
<android.support.v4.widget.SwipeRefreshLayout
       android:id="@+id/activity_main_refreshlayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
           <RelativeLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <android.support.v7.widget.Toolbar
                   android:background="@color/colorWhite"
                   android:id="@+id/toolbarTrangChu"
                   app:title="Shopping Online"
                   app:titleTextColor="@color/colorApp"
                   android:layout_width="match_parent"
                   android:layout_height="?attr/actionBarSize">
               </android.support.v7.widget.Toolbar>
               <android.support.v4.widget.NestedScrollView
                   android:layout_below="@id/toolbarTrangChu"
                   android:id="@+id/scrollview"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:id="@+id/relativelayoutView"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                      <android.support.v7.widget.CardView
                          android:layout_margin="5dp"
                          android:id="@+id/cardviewQuangCao"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                          <AdapterViewFlipper
                              android:layout_marginTop="0dp"
                              android:id="@+id/viewflipperTrangChu"
                              android:layout_width="match_parent"
                              android:layout_height="200dp">
                          </AdapterViewFlipper>
                      </android.support.v7.widget.CardView>
                       <RelativeLayout
                           android:layout_below="@+id/cardviewQuangCao"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <android.support.v7.widget.CardView
                               android:layout_margin="5dp"
                               android:id="@+id/cardviewDM"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <LinearLayout
                                   android:layout_margin="5dp"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <RelativeLayout
                                       android:id="@+id/relativelayout1"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
                                       <ImageView
                                           android:layout_centerVertical="true"
                                           android:scaleType="fitXY"
                                           android:padding="10dp"
                                           android:id="@+id/iconDanhMuc"
                                           android:src="@drawable/icon_danhmuc"
                                           android:layout_width="50dp"
                                           android:layout_height="50dp" />
                                       <TextView
                                           android:layout_toRightOf="@+id/iconDanhMuc"
                                           android:layout_centerVertical="true"
                                           android:textAllCaps="true"
                                           android:textStyle="bold"
                                           android:textColor="@color/colorApp"
                                           android:id="@+id/tvDanhmuc"
                                           android:padding="10dp"
                                           android:textSize="18sp"
                                           android:text="Danh mục"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content" />
                                   </RelativeLayout>
                                   <android.support.v7.widget.RecyclerView
                                       android:layout_marginTop="15dp"
                                       android:layout_below="@id/relativelayout1"
                                       android:id="@+id/recyclerviewDanhMuc"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">
                                   </android.support.v7.widget.RecyclerView>
                               </LinearLayout>
                           </android.support.v7.widget.CardView>
                           <android.support.v7.widget.CardView
                               android:layout_margin="5dp"
                               android:layout_below="@id/cardviewDM"
                               android:id="@+id/cardviewThuongHieu"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <LinearLayout
                                   android:layout_margin="5dp"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <RelativeLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
                                       <ImageView
                                           android:layout_centerVertical="true"
                                           android:scaleType="fitXY"
                                           android:padding="10dp"
                                           android:id="@+id/iconThuongHieu"
                                           android:src="@drawable/icon_thuonghieu"
                                           android:layout_width="50dp"
                                           android:layout_height="50dp" />
                                       <TextView
                                           android:layout_centerVertical="true"
                                           android:layout_toRightOf="@+id/iconThuongHieu"
                                           android:textAllCaps="true"
                                           android:textStyle="bold"
                                           android:textColor="@color/colorApp"
                                           android:id="@+id/tvThuongHieu"
                                           android:textSize="18sp"
                                           android:text="Thương hiệu hàng đầu"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content" />
                                   </RelativeLayout>
                                   <android.support.v7.widget.RecyclerView
                                       android:layout_marginTop="15dp"
                                       android:id="@+id/recyclerviewThuongHieu"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
                                   </android.support.v7.widget.RecyclerView>
                               </LinearLayout>
                           </android.support.v7.widget.CardView>
                           <android.support.v7.widget.CardView
                               android:layout_margin="5dp"
                               android:layout_below="@id/cardviewThuongHieu"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <LinearLayout
                                   android:orientation="vertical"
                                   android:layout_below="@id/cardviewDM"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <RelativeLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
                                       <ImageView
                                           android:layout_centerVertical="true"
                                           android:scaleType="fitXY"
                                           android:padding="10dp"
                                           android:id="@+id/icongoiy"
                                           android:src="@drawable/icon_goiy"
                                           android:layout_width="50dp"
                                           android:layout_height="50dp" />
                                       <TextView
                                           android:layout_centerVertical="true"
                                           android:layout_toRightOf="@+id/icongoiy"
                                           android:textAllCaps="true"
                                           android:textStyle="bold"
                                           android:textColor="@color/colorApp"
                                           android:id="@+id/tvdienthoainoibat"
                                           android:textSize="18sp"
                                           android:text="Gợi ý"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content" />
                                   </RelativeLayout>
                                   <android.support.v7.widget.RecyclerView
                                       android:layout_marginTop="15dp"
                                       android:id="@+id/recyclerviewSanPham"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">
                                   </android.support.v7.widget.RecyclerView>
                               </LinearLayout>
                           </android.support.v7.widget.CardView>
                       </RelativeLayout>
                   </RelativeLayout>
               </android.support.v4.widget.NestedScrollView>
               <TextView
                   android:visibility="gone"
                   android:gravity="center"
                   android:layout_centerInParent="true"
                   android:id="@+id/tvThongBao"
                   android:textSize="24sp"
                   android:text="Không tìm thấy!"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <android.support.v7.widget.RecyclerView
                   android:layout_marginTop="15dp"
                   android:layout_below="@+id/toolbarTrangChu"
                   android:id="@+id/recyclerviewTimKiem"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </android.support.v7.widget.RecyclerView>
           </RelativeLayout>
   </android.support.v4.widget.SwipeRefreshLayout>
</android.support.v4.widget.DrawerLayout>