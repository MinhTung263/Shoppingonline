<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
       <RelativeLayout
           android:layout_margin="3dp"
           android:background="@drawable/borderblack"
           android:gravity="center"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="270dp">
           <ImageView
               android:layout_gravity="top|center"
               android:layout_centerHorizontal="true"
               android:id="@+id/imgHinhSP"
               android:src="@mipmap/ic_launcher"
               android:scaleType="fitXY"
               android:layout_width="100dp"
               android:layout_height="100dp" />
          <RelativeLayout
              android:layout_margin="15dp"
              android:layout_below="@+id/imgHinhSP"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:maxLines="1"
                  android:textColor="#000"
                  android:textSize="15sp"
                  android:id="@+id/tvTenSP"
                  android:text="iPhone Xs Max"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:textColor="#F00202"
                  android:textSize="14sp"
                  android:id="@+id/tvGiaSP"
                  android:layout_below="@+id/tvTenSP"
                  android:text="29.990.000 đ"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:ellipsize="end"
                  android:imeOptions="actionNext"
                  android:maxLines="2"
                  android:textSize="12dp"
                  android:id="@+id/tvMoTa"
                  android:layout_below="@id/tvGiaSP"
                  android:text="iPhone cấu hình cao"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </RelativeLayout>
       </RelativeLayout>
</RelativeLayout>